{% extends 'AdminBundle::layout.html.twig' %}

{% set title="Gestion des Categories" %}

{% block css %}
    <link href="{{ asset('assets/plugins/datatables/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/datatables/responsive.dataTables.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-12">
            <!-- Sorting -->
            <div class="widget has-shadow">
                <div class="widget-header bordered no-actions d-flex align-items-center">
                    <h2> Liste des Categories</h2>
                    <div class="widget-options">
                        <a href="{{ path('admin_ajouterCategorie') }}" class="btn btn-success">Ajouter</a>
                    </div>
                </div>
                <div class="widget-body">
                    <div class="table-responsive">
                        <table id="sorting-table" class="table mb-0">
                            <thead>
                            <tr>
                                <th>ID</th>

                                <th>Nom</th>
                                <th>Age</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for categories in categories %}
                                <tr>
                                    <td>{{ categories.Id }}</td>

                                    <td>{{ categories.Nom }}</td>
                                    <td>{{ categories.Age }}</td>

                                    <td class="td-actions">
                                        <a href="{{ path('UpdateCategorie', {'id': categories.id}) }}"><i class="la la-edit edit"></i></a>
                                        <a href="{{ path('SupprimerCategorie', {'id': categories.id}) }}" class="delete-button"><i class="la la-close delete"></i></a>

                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Aucun enregistrement trouv√©</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/plugins/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/datatables/dataTables.responsive.min.js') }}"></script>

    <script>
        $(function () {
            $('.table').DataTable({
                responsive: true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}
