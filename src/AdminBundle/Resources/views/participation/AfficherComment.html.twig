{% extends 'AdminBundle::layout.html.twig' %}

{% set title="Comment list" %}

{% block css %}
    <link href="{{ asset('assets/plugins/datatables/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/datatables/responsive.dataTables.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-12">

            <div class="widget has-shadow">
                <div class="widget-header bordered no-actions d-flex align-items-center">
                    <h2> Comment list </h2>

                </div>
                <div class="widget-body">
                    <div class="table-responsive">
                        <table id="sorting-table" class="table mb-0">
                            <thead>
                            <tr>
                                <th>identification</th>
                                <th>Customer name</th>
                                <th>Date</th>
                                <th>Comment</th>
                                <th>delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for com in com %}
                                <tr>
                                    <td>{{ com.getIdCom() }}</td>
                                    <td>{{ com.getUser().nom}}</td>
                                    <td>{{ com.getDate|date('m/d/y') }}</td>
                                    <td>{{ com.getContenu }}</td>
                                    <td class="td-actions">

                                        <a href="{{ path('admin_supprimer_comment', {'id_com': com.getIdCom()}) }}" class="delete-button"><i class="la la-close delete"></i></a>


                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">No record found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/plugins/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/datatables/dataTables.responsive.min.js') }}"></script>

    <script>
        $(function () {
            $('.table').DataTable({
                responsive: true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}
