{% extends 'AdminBundle::layout.html.twig' %}

{% set title="Gestion des utilisateurs" %}

{% block css %}
    <link href="{{ asset('assets/plugins/datatables/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/datatables/responsive.dataTables.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-12">

            <div class="widget has-shadow">
                <div class="widget-header bordered no-actions d-flex align-items-center">
                    <h2> Liste des utilisateurs</h2>
                    <div class="widget-options">
                        <a href="{{ path('admin_ajouter_user') }}" class="btn btn-success">Ajouter</a>
                    </div>
                </div>
                <div class="widget-body">
                    <div class="table-responsive">
                        <table id="sorting-table" class="table mb-0">
                            <thead>
                            <tr>
                                <th>Nom d'utilisateur</th>
                                <th>Email</th>
                                <th>Activé</th>
                                <th>Dernier accès</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in user %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.enabled ? 'Oui' : 'Non' }}</td>
                                    <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                                    <td class="td-actions">
                                        <a href="{{ path('admin_modifier_user',{'id': user.id}) }}"><i class="la la-edit edit"></i></a>
                                        <a href="{{ path('admin_supprimer_user', {'id': user.id}) }}" class="delete-button"><i class="la la-close delete"></i></a>
                                        <a href="{{ path('admin_details_user',{'id': user.id}) }}" ><i class="la la-bars"></i></a>

                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/plugins/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/datatables/dataTables.responsive.min.js') }}"></script>

    <script>
        $(function () {
            $('.table').DataTable({
                responsive: true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}
