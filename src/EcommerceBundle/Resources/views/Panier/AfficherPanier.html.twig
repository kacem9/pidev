             $('input.minus').click(function () {
             $('input.qty').attr('value',parseInt($('input.qty').val())-1);
         })});
         $('input.plus').click(function () {
             $('input.qty').attr('value',parseInt($('input.qty').val())+1);
         });
 */
    </script>
{% endblock %}


