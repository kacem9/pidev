
{% extends "EvenementBundle::layout.html.twig" %}
{% set title="Welcome To the World of bikes" %}
{% block css %}
    <link href="{{ asset('assets/plugins/datatables/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/datatables/responsive.dataTables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet">

{% endblock %}
{% block body %}
<div class="row">
    <div class="col-xl-12">
        <!-- Sorting -->
        <div class="widget">
            <div class="widget-header bordered no-actions d-flex align-items-center">
                <h2> The list of events </h2>
                <div class="widget">
                    {{ form(form ,{'attr':{'novalidate':'novalidate'}}) }}
                    <br>
                    <a href="{{ path("ajouter_event") }}" class="btn btn-success">Add an event </a>

                </div>
            </div>

            <div class="widget-body">

                <div class="container">

                    <div class="row">
                        {% for e in event %}

                            <div class="col-xs-12 col-md-6 col-lg-3">



                                <div class="card">
                                    <img class="card-img-top" src="{{ asset('uploads/admin/' ~ e.photo) }}" alt="Card image cap"/>
                                    <div class="card-block">
                                        <h4 class="card-title">Event name: {{ e.nom}}</h4>
                                        <p class="card-text">Description: {{ e.description }}</p>
                                        <p class="card-text">Location: {{ e.lieuEvent }}</p>
                                        <p class="card-text">Number of participants: {{ e.nbrParticipant }}</p>
                                        <p class="card-text">Price: {{ e.prix }}</p>
                                        <p class="card-text">Category:  {{ e.getCategoriesEvent().type }}</p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">Event date: {{ e.dateEvent|date('m/d/y') }}</small>
                                        <a href="{{ path('details_event',{'id' : e.id}) }}"class="btn btn-info-outline btn-xs">Details</a> &nbsp
                                        <a href="{{ path('modifier_event',{'id' : e.id}) }}"class="btn btn-info-outline btn-xs">Edit</a> &nbsp
                                        <br>

                                        <a href="{{ path('supprimer_event',{'id' : e.id}) }}" class="btn btn-info btn-xs">Remove</a>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}

                        <!-- Add the extra clearfix for only the required viewport -->



                    </div>
                </div>

            </div>
            <a href="{{ path('list_event_pdf') }}">print</a>
            {% endblock %}
            {% block js %}
                <script src="{{ asset('assets/plugins/datatables/datatables.min.js') }}"></script>
                <script src="{{ asset('assets/plugins/datatables/dataTables.responsive.min.js') }}"></script>
                <script>
                    $(function () {
                        dtable = $('.table').DataTable({
                            responsive: true,
                            "language": {
                                "url":"//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"

                            }
                        });
                        $('.filter').on('keyup change', function() {

                            dtable.search('');
                            dtable.column(3).search(this.value).draw();
                        });

                        $(".dataTables_filter input").on('keyup change', function() {

                            dtable.columns().search('');

                            $('.filter').val('');
                        });
                    });
                </script>




            {% endblock %}
