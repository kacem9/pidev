{% extends 'layout.html.twig' %}
{% set title="vente vélos" %}
{% block css %}
    <link href="{{ asset('assets/plugins/datatables/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/datatables/responsive.dataTables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet">

{% endblock %}
{% block RoadBikeacceuil %}


    <div class="row">
        <div class="col-xl-12">
            <!-- Sorting -->
            <div class="widget">
                <div class="widget-header bordered no-actions d-flex align-items-center">


                </div>

                <div class="widget-body">

                    <div class="container">

                        <div class="row py-5">
                            {% for velo in velo %}

                                <div class="col-xs-12 col-md-6 col-lg-3">



                                    <div class="card">
                                        <img class="card-img-top" src="{{ asset('uploads/admin/' ~ velo.Photo) }}" alt="Card image cap"/>
                                        <div class="card-block">
                                            <h4 class="card-title">{{ velo.categories }}</h4>
                                            <p class="card-text">Description:{{ velo.description }}</p>
                                            <p class="card-text">Localisation:{{ velo.localitsationVelo }}</p>

                                            <p class="card-text">Prix:{{ velo.prix }}</p>
                                            <p>
                                                {% if velo.etatVendu==1 %}
                                                    Vélo vendu
                                                {% elseif velo.etatVendu==0 %}
                                                    Vélo non vendu
                                                {% endif %}
                                            </p>
                                        </div>
                                        <div class="card-footer">
                                            <small class="text-muted">Publié le :{{ velo.datePublication|date('m/d/y') }}</small>
                                            <br>


                                        </div>
                                    </div>
                                </div>
                            {% endfor %}




                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script src="{{ asset('assets/plugins/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/datatables/dataTables.responsive.min.js') }}"></script>
    <script>
        $(function () {
            dtable = $('.table').DataTable({
                responsive: true,
                "language": {
                    "url":"//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"

                }
            });
            $('.filter').on('keyup change', function() {

                dtable.search('');
                dtable.column(3).search(this.value).draw();
            });

            $(".dataTables_filter input").on('keyup change', function() {

                dtable.columns().search('');

                $('.filter').val('');
            });
        });
    </script>
{% endblock %}
